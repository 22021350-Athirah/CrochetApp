<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Add New Order</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      background-color: #d3d3d3; 
    }
    .navbar-crochet {
      background-color: #000000; 
    }
    .navbar-crochet .navbar-brand, .navbar-crochet .nav-link {
      color: white;
    }
    .btn-brown {
      background-color: #8b4513; 
      color: white;
    }
    .btn-brown:hover {
      background-color: #a0522d; 
    }
  </style>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
  
  <nav class="navbar navbar-expand-sm navbar-crochet">
    <div class="container-fluid">
      <ul class="navbar-nav">
        <li class="nav-item">
          <a class="nav-link"><b>Cloudy Crochet</b></a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/">Home</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/orders">Orders</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/feedback">Feedbacks</a>
        </li>
      </ul>
    </div>
  </nav>

  <div class="container mt-4">
    <h2>Add New Order</h2>
    <form id="orderForm" action="/addOrder" method="POST" enctype="multipart/form-data">

      <div class="row mb-2">
        <div class="col-2">
          <label for="name" class="form-label">Customer Name:</label>
        </div>
        <div class="col-8">
          <input type="text" id="name" name="name" class="form-control" required>
        </div>
      </div>

      <div class="row mb-2">
        <div class="col-2">
          <label for="email" class="form-label">Email:</label>
        </div>
        <div class="col-8">
          <input type="email" id="email" name="email" class="form-control" required>
        </div>
      </div>

      <div class="row mb-2">
        <div class="col-2">
          <label for="contact" class="form-label">Contact:</label>
        </div>
        <div class="col-8">
          <input type="text" id="contact" name="contact" class="form-control" required>
        </div>
      </div>

      <div class="row mb-2">
        <div class="col-2">
          <label class="form-label">Choose Option:</label>
        </div>
        <div class="col-8">
          <div class="form-check">
            <input class="form-check-input" type="radio" name="option" id="uploadFile" value="file" checked>
            <label class="form-check-label" for="uploadFile">
              Upload File
            </label>
          </div>
          <div class="form-check">
            <input class="form-check-input" type="radio" name="option" id="provideLink" value="link">
            <label class="form-check-label" for="provideLink">
              Provide Link
            </label>
          </div>
        </div>
      </div>

      <div class="row mb-2" id="fileInputRow">
        <div class="col-2">
          <label for="image" class="form-label">Upload Image:</label>
        </div>
        <div class="col-8">
          <input type="file" id="image" name="image" class="form-control">
        </div>
      </div>

      <div class="row mb-2" id="linkInputRow" style="display: none;">
        <div class="col-2">
          <label for="link" class="form-label">Image Link:</label>
        </div>
        <div class="col-8">
          <input type="text" id="link" name="link" class="form-control">
        </div>
      </div>

      <div class="row mb-2">
        <div class="col-2"></div>
        <div class="col-8">
          <button type="submit" class="btn btn-brown">Submit</button>
        </div>
      </div>

    </form>
  </div>

  <script>
    const uploadFile = document.getElementById('uploadFile');
    const provideLink = document.getElementById('provideLink');
    const fileInputRow = document.getElementById('fileInputRow');
    const linkInputRow = document.getElementById('linkInputRow');

    uploadFile.addEventListener('change', function() {
      if (this.checked) {
        fileInputRow.style.display = 'flex';
        linkInputRow.style.display = 'none';
      }
    });

    provideLink.addEventListener('change', function() {
      if (this.checked) {
        fileInputRow.style.display = 'none';
        linkInputRow.style.display = 'flex';
      }
    });
  </script>
</body>
</html>

