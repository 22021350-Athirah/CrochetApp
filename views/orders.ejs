<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <title>Student List App</title>
</head>
<style>
    body {
      background-color: #d3d3d3; 
    }
    .navbar-crochet {
      background-color: #000000; 
    }
    .navbar-crochet .navbar-brand, .navbar-crochet .nav-link {
      color: white;
    }
    .btn-brown {
      background-color: #8b4513; 
      color: white;
    }
    .btn-brown:hover {
      background-color: #a0522d; 
    }
    .rounded-image {
      width: 50px; 
      height: 50px; 
      border-radius: 50%; 
      overflow: hidden; 
    }
</style>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
  
  <nav class="navbar navbar-expand-sm navbar-crochet">
    <div class="container-fluid">
      <ul class="navbar-nav">
        <li class="nav-item">
          <a class="nav-link"><b>Cloudy Crochet</b></a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/">Home</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/orders">Orders</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/feedback">Feedbacks</a>
        </li>
      </ul>
    </div>
  </nav>

    <div class="container">
        <br>
        <div class="text-center"><h2>Order Requests</h2></div>
        <br>
        <table class="table table-hover small text-center">
            <thead>
                <tr>
                    <th width="50">Customer Name</th>
                    <th width="50">Email</th>
                    <th width="50">Reference Inspo</th>
                    <th width="50">Contact</th>
                    <th width="50">Edit</th>
                    <th width="50">Delete</th>
                </tr>
            </thead>
            <tbody>
              <% for(let i = 0; i < orders.length; i++) { %>
              <tr>
                  <td><a href="/customer/<%= orders[i].id %>"><%= orders[i].name %></a></td>
                  <td><%= orders[i].email %></td>
                  <td>
                    <% if (orders[i].image && orders[i].image.startsWith('http')) { %>
                        <img src="<%= orders[i].image %>" class="rounded-image">
                    <% } else if (orders[i].image) { %>
                        <img src="/images/<%= orders[i].image %>" class="rounded-image">
                    <% } else { %>
                        <p>No image available</p>
                    <% } %>
                </td>
                  <td><%= orders[i].contact %></td>
                  <td><a href="/editOrder/<%= orders[i].id %>">Edit</a></td>
                  <td><a href="/deleteOrder/<%= orders[i].id %>" onclick="return confirm('Are you sure you want to delete this order?')">Delete</a></td>
              </tr>
              <% } %>
          </tbody>
        </table>

        <div class="row mb-2 mt-4">
            <div class="col-7">
                <a href="/addOrder" class="btn btn-brown">Order Now</a>
            </div>
          </div>
    
    </div>
</body>
</html>
